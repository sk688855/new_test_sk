# TestZeus Hercules Configuration Example

# Device Manager Configuration
DEVICE_MANAGER=appium         # Options: appium, playwright
DEVICE_OS=android            # Options: android, ios

# General Appium Configuration
APPIUM_SERVER_URL=           # Optional custom Appium server URL
APPIUM_SERVER_PORT=4723
PLATFORM_VERSION=            # Optional OS version to target
APPIUM_CAPABILITIES={"autoGrantPermissions": true}

# Android-specific Configuration
# (Used when DEVICE_OS=android)
PLATFORM_NAME=Android
DEVICE_NAME=emulator-5554
AUTOMATION_NAME=UiAutomator2
EMULATOR_AVD_NAME=Medium_Phone_API_35
APPIUM_APK_PATH=/path/to/your/app.apk

# iOS-specific Configuration
# (Used when DEVICE_OS=ios)
#PLATFORM_NAME=iOS
#DEVICE_NAME=iPhone Simulator
#AUTOMATION_NAME=XCUITest
#IOS_SIMULATOR_DEVICE=iPhone 14
#APPIUM_IOS_APP_PATH=/path/to/your/app.app
#IOS_BUNDLE_ID=com.example.app

# iOS Development Team Configuration
#XCODE_ORG_ID=XXXXXXXXXX          # Your team's org ID
#XCODE_SIGNING_ID=iPhone Developer
#IOS_TEAM_ID=YYYYYYYYYY           # Your development team ID
#WEBDRIVERAGENT_PATH=             # Optional custom WebDriverAgent path

# Test Configuration
MODE=prod                     # Options: prod, debug
HEADLESS=true
RECORD_VIDEO=true
TAKE_SCREENSHOTS=true
TOKEN_VERBOSE=false
BROWSER_RESOLUTION=1920,1080
RUN_DEVICE=desktop

# Project Paths
PROJECT_SOURCE_ROOT=./opt
INPUT_GHERKIN_FILE_PATH=     # Optional custom Gherkin file path
TEST_DATA_PATH=              # Optional custom test data path
JUNIT_XML_BASE_PATH=         # Optional custom JUnit XML path

# LLM Configuration
LLM_MODEL_NAME=gpt-3.5-turbo
LLM_MODEL_API_KEY=your_api_key_here

# Note: For iOS development, ensure you have:
# 1. Xcode installed and configured
# 2. iOS Simulator installed
# 3. WebDriverAgent built and configured
# 4. Proper signing certificates and provisioning profiles
# LOAD_EXTRA_TOOLS=true
# EXECUTE_BULK=true
# USE_DYNAMIC_LTM=true
